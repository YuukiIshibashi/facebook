<p id="notice"><%= notice %></p>

<%= form_with model: @topic, local: true do |f| %>
	<% if @topic.errors.any? %>
		<div id="error_explanation">
			<h2><%= @topic.errors.count %>件のエラーがあります。</h2>
			<ul>
			<% @topic.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
  <%= f.text_area :content, class: 'form-control', placeholder: "なにしてる？" %>
  <br>
  <div class="file_area">
		<%= render partial: 'pictures/form', locals: { f: f } %>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
 <% end %>
 </div>

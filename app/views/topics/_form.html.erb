<%= form_with model: @topic, local: true do |f| %>
	<% if @topic.errors.any? %>
		<div id="error_explanation">
			<h2><%= @topic.errors.count %>件のエラーがあります。</h2>
			<ul>
			<% @topic.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

  <%= f.label :タイトル %>
  <%= f.text_field :title, class: 'form-control' %>
  <br>
  <%= f.label :本文 %>
  <%= f.text_area :content, class: 'form-control' %>
  <br>

	<%= f.fields_for :pictures do |a| %>
		  <%= a.file_field :image %>
			<%= a.hidden_field :image_cache %>
		<% end %>

  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
 <% end %>

<%= link_to "Topic一覧画面にもどる" , topics_path %>

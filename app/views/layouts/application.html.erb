<!DOCTYPE html>
<html>
<head>
  <title>Facebook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
		<nav class="navbar navbar-default">
		  <div class="container-fluid">
		    <div class="navbar-header">
		      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
		        <span class="sr-only">Bootstrap</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
		      <%= link_to 'Facebook', root_path, class:"navbar-brand" %>
		    </div>
		    <div id="gnavi" class="collapse navbar-collapse">
					<ul class="nav navbar-nav">
						<% if user_signed_in?%>
							<li class="interval"><%= link_to 'マイページ', mypage_topics_path(current_user.id) %></li>
							<li class="interval"><%= link_to '登録内容変更', edit_user_registration_path(current_user.id) %></li>
							<li class="interval"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
							<li class="interval"><%= link_to '投稿する', new_topic_path %></li>
							<li class="interval"><%= link_to 'ユーザー一覧', users_path %></li>
							<li><%= link_to "メッセージ", conversations_path%></li>
						<% else %>
							<li class="interval"><%= link_to 'ログイン' , new_user_session_path %></li>
							<li class="interval"><%= link_to '新規登録' , new_user_registration_path %></li>
						<% end %>
					</ul>
		    </div>
		  </div>
		</nav>

  </header>
	<% if notice %>
		<%= notice %>
	<% end %>
	<% if alert %>
		<%= alert %>
	<% end %>

<%= yield %>


</body>
</html>
